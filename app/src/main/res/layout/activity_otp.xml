<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".OtpActivity"
        android:background="@color/white"
        >

        <!-- Back Button and Header Text -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/otp_btn_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_back"
                android:contentDescription="Back Button"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verify OTP"
                android:textSize="15sp"
                android:fontFamily="@font/poppinssemibold"
                android:textColor="@color/black"
                />
        </LinearLayout>

        <!-- OTP Illustration -->
        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_otp"
            />

        <!-- Instruction Text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter the OTP\nwe sent you on the following email:"
            android:textSize="17sp"
            android:fontFamily="@font/poppinssemibold"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:gravity="center"
            android:fontFamily="@font/poppinsregular"
            android:id="@+id/showEmail"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            />

        <!-- OTP Input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:id="@+id/ly_otp"
            android:layout_marginTop="20dp">

            <!-- Add your EditText fields for OTP input here -->
            <EditText
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:textColor="@color/black"
                android:fontFamily="@font/poppinsregular"
                android:maxLength="1"
                android:id="@+id/otp1"
                />

            <EditText
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:textColor="@color/black"
                android:fontFamily="@font/poppinsregular"
                android:maxLength="1"
                android:id="@+id/otp2"
                />

            <EditText
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:textColor="@color/black"
                android:fontFamily="@font/poppinsregular"
                android:maxLength="1"
                android:id="@+id/otp3"
                />

            <EditText
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:textColor="@color/black"
                android:fontFamily="@font/poppinsregular"
                android:maxLength="1"
                android:id="@+id/otp4"
                />

            <EditText
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:textColor="@color/black"
                android:fontFamily="@font/poppinsregular"
                android:maxLength="1"
                android:id="@+id/otp5"
                />

            <EditText
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:textColor="@color/black"
                android:fontFamily="@font/poppinsregular"
                android:maxLength="1"
                android:id="@+id/otp6"
                />

        </LinearLayout>

        <!-- Resend OTP Section -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Didn't receive the OTP?"
                android:fontFamily="@font/poppinsregular"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/txt_resend_otp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resend OTP"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/poppinssemibold"
                android:textSize="12sp"
                android:textColor="@color/pinksecondary"/>
        </LinearLayout>

        <!-- Submit Button -->
        <Button
            android:id="@+id/button_submit_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DONE"
            android:fontFamily="@font/poppinsbold"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_shape"
            android:textColor="@color/white"
            />
    </LinearLayout>
</layout>